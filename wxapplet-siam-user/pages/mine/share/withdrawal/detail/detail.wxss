page {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
  margin: 0;
}

.integral-items {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 26rpx;
  margin: 20rpx;
  border-radius: 15rpx;
  background-color: white;
}

.integral-item-name {
  font-size: 28rpx;
  color: rgb(0, 0, 0);
  margin-bottom: 10rpx;
}

.integral-item-time {
  font-size: 26rpx;
  color: rgb(141, 141, 141)
}

.integral-item-number {
  font-size: 34rpx;
}

.color-integral {
  color: red;
}

.scroll-views {
  background: #f5f5f5;
  height: 100%;
}

.withdrawal-button{
   margin-top: 60rpx;
   font-size: 28rpx;
}